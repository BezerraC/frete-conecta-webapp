<h1>Cadastro de Motorista</h1>
<form action="/driver" method="POST" enctype="multipart/form-data">
    <label for="name">Nome completo:</label>
    <input type="text" id="name" name="name" required><br><br>

    <label for="phone">Telefone (WhatsApp):</label>
    <input type="text" id="phone" name="phone" required><br><br>

    <label>Horário que trabalha:</label><br>
    <input type="checkbox" name="work_hours" value="Manhã"> Manhã<br>
    <input type="checkbox" name="work_hours" value="Tarde"> Tarde<br>
    <input type="checkbox" name="work_hours" value="Noite"> Noite<br>
    <input type="checkbox" name="work_hours" value="Sempre disponível"> Sempre disponível<br><br>

    <label for="neighborhood">Qual seu bairro:</label>
    <select id="neighborhood" name="neighborhood" required>
        <% bairros.forEach(bairro=> { %>
            <option value="<%= bairro %>">
                <%= bairro %>
            </option>
            <% }) %>
    </select><br><br>

    <label>Qual tipo de frete você faz:</label><br>
    <input type="checkbox" name="freight_type" value="Mudanças residenciais"> Mudanças residenciais<br>
    <input type="checkbox" name="freight_type" value="Cargas"> Cargas<br>
    <input type="checkbox" name="freight_type" value="Pequenos fretes"> Pequenos fretes<br>
    <input type="checkbox" name="freight_type" value="Todos os tipos de fretes"> Todos os tipos de fretes<br>
    <input type="checkbox" name="freight_type" value="Outro"> Outro<br><br>

    <label for="vehicle_size">Qual o tamanho do seu veículo:</label><br>
    <input type="checkbox" name="vehicle_size" value="Grande porte"> Grande porte<br>
    <input type="checkbox" name="vehicle_size" value="Médio porte"> Médio porte<br>
    <input type="checkbox" name="vehicle_size" value="Pequeno porte"> Pequeno porte<br><br>

    <label for="vehicle_model">Marca ou modelo do veículo:</label>
    <input type="text" id="vehicle_model" name="vehicle_model"><br><br>

    <label for="vehicle_image">Imagem do veículo:</label>
    <input type="file" id="vehicle_image" name="vehicle_image"><br><br>

    <label>Possui algum ajudante?</label><br>
    <input type="checkbox" name="has_helper" value="true"> Sim<br>
    <input type="checkbox" name="has_helper" value="false"> Não<br><br>

    <button type="submit">Cadastrar</button>
</form>

